<div class="container">
    <div class="col-md-6 col-md-offset-3" style="margin-top: 30px;">
        <h2>Sign up</h2>
        <form  id="signupform" name="signupform" ref='uploadForm' action="/signup" method="POST" encType="multipart/form-data">
          <div class="form-group">
            <label for="exampleInputEmail1">User name</label>
            <input name="username" type="text" class="form-control"  placeholder="E.g. jacky2283">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <input id="name" name="name" type="text" class="form-control" placeholder="E.g. Jacky Chan">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input name="pw" type="password" class="form-control" placeholder="Password">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Retype password</label>
            <input name="pw2" type="password" class="form-control"  placeholder="Password">
          </div>
          <div class="form-group">
            <label for="avatar">Avatar</label>
            <input name="avatar" type="file">
          </div>
           <button type="submit" class="btn btn-default" >Sign up</button>
        </form>
       
    </div>
    
</div>